{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./src/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "src/knexfile.ts"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "ts-node": {
    "require": ["dotenv/config"]
  }
}
