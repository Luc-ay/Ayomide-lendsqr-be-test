{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "rootDir": ".",
    "typeRoots": ["types", "node_modules/@types"],
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "knexfile.ts"],
  "exclude": ["node_modules", "dist"]
}
